# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangSmith Configuration (for deployment and monitoring)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=proposal-bot

# Google Workspace Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# Google Sheets IDs (for resource data)
STAFF_PROFILES_SHEET_ID=your_staff_profiles_sheet_id
PRICING_SHEET_ID=your_pricing_sheet_id
VENDOR_RELATIONSHIPS_SHEET_ID=your_vendor_relationships_sheet_id
CAPABILITIES_SHEET_ID=your_capabilities_sheet_id

# Gmail Configuration
GMAIL_USER_EMAIL=proposals@yourcompany.com

# Database Configuration (PostgreSQL with pgvector)
DATABASE_URL=postgresql://user:password@localhost:5432/proposal_bot
REDIS_URL=redis://localhost:6379/0

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONCURRENT_VALIDATIONS=10
VALIDATION_TIMEOUT_HOURS=72
PROJECT_LEAD_RESPONSE_TIMEOUT_HOURS=48

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
